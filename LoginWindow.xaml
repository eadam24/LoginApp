<Window x:Class="LoginApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300"
        Background="LightBlue">
    
    <Border Background="AliceBlue" CornerRadius="15" Margin="20">
        <StackPanel>
            <Label Content="Log In" 
               HorizontalAlignment="Center" 
               FontWeight="Bold" FontSize="25" Foreground="Black"/>
            <Separator/>
            <Label Content="Username" Foreground="Black" FontSize="18"/>
            <TextBox x:Name="user_username" Foreground="Black" Background="#FFE4E4E4"/>

            <Label Content="Password" Foreground="Black" FontSize="18"/>
            <PasswordBox x:Name="user_password" Foreground="Black" Background="#FFE4E4E4"/>

            <Button Content="Submit" Width="50" Margin="0,20,0,0" 
                    Background="#FF9EC9CA" FontWeight="Bold" Click="Submit"/>
        </StackPanel>
    </Border>
</Window>
